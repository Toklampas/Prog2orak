{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "cppbuild",
			"label": "build all cpp files in workspace folder",
			"command": "C:\\mingw64\\bin\\g++.exe",
			"args": [
				"${workspaceFolder}\\*.cpp",
				"-g",
				"-o",
				"${workspaceFolder}\\${workspaceFolderBasename}.exe"
			],
			"options": {
				"cwd": "${fileDirname}"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": {
				"kind": "build",
				"isDefault": true
			},
			"detail": "compiler: \"C:\\mingw64\\bin\\g++.exe\""
		}
	]
}
